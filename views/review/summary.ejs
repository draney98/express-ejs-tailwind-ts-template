<div class="container mx-auto p-6 space-y-6">
  <div class="flex items-center justify-between">
    <h1 class="text-2xl font-semibold">Summary</h1>
    <a href="/configs/<%= companyQuestions[0] ? companyQuestions[0].reviewConfigId : '' %>" class="text-gray-300">Back to Config</a>
  </div>
  <div class="space-y-4">
    <% companyQuestions.forEach(cq => { 
      const latest = cq.sessions[cq.sessions.length - 1];
    %>
      <div class="border rounded p-4">
        <div class="font-medium mb-1"><%= cq.text %></div>
        <div class="text-sm text-gray-400 mb-2">Generated Answer</div>
        <div class="whitespace-pre-wrap bg-gray-800 p-3 rounded"><%= (latest && latest.companyAnswer) || '(no answer)' %></div>
      </div>
    <% }) %>
  </div>
</div>


