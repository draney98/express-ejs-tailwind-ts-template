<%- include('../partials/flash'); %>
<div class="container mx-auto p-6">
  <h1 class="text-2xl font-semibold mb-4"><%= title %></h1>
  <form method="post" action="/configs" class="space-y-4 max-w-lg">
    <div>
      <label class="block text-sm font-medium mb-1">Name</label>
      <input name="name" class="w-full border px-3 py-2 rounded" placeholder="EOY 2025" />
    </div>
    <div>
      <button class="px-4 py-2 bg-blue-600 text-white rounded">Create</button>
      <a href="/configs" class="ml-2 text-gray-700">Cancel</a>
    </div>
  </form>
</div>


