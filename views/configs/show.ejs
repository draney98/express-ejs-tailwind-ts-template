<%- include('../partials/flash'); %>
<div class="container mx-auto p-6 space-y-8">
  <div class="flex items-center justify-between">
    <h1 class="text-2xl font-semibold"><%= title %></h1>
    <a href="/configs" class="text-gray-700">Back to list</a>
  </div>

  <section class="space-y-3">
    <h2 class="text-xl font-medium">Add Company Question</h2>
    <form method="post" action="/configs/<%= config.id %>/company-questions" class="grid gap-3 md:grid-cols-2">
      <div class="md:col-span-2">
        <label class="block text-sm font-medium mb-1">Question Text</label>
        <input name="text" class="w-full border px-3 py-2 rounded" placeholder="What should this person continue doing?" />
      </div>
      <div class="md:col-span-2">
        <label class="block text-sm font-medium mb-1">Prompt Template</label>
        <textarea name="prompt" rows="3" class="w-full border px-3 py-2 rounded" placeholder="Use the answers of the Supporting Questions to answer the Company Question."></textarea>
      </div>
      <div>
        <label class="block text-sm font-medium mb-1">Order</label>
        <input name="orderIndex" type="number" value="0" class="w-full border px-3 py-2 rounded" />
      </div>
      <div class="flex items-end">
        <button class="px-4 py-2 bg-blue-600 text-white rounded">Add Company Question</button>
      </div>
    </form>
  </section>

  <section>
    <h2 class="text-xl font-medium mb-3">Company Questions</h2>
    <div class="mb-3">
      <a href="/review/start/<%= config.id %>" class="px-3 py-2 bg-green-600 text-white rounded">Start Review Walkthrough</a>
    </div>
    <% if (config.companyQuestions.length === 0) { %>
      <p class="text-gray-600">No company questions yet.</p>
    <% } %>
    <div class="space-y-6">
      <% config.companyQuestions.forEach(cq => { %>
        <div class="border rounded p-4 space-y-3">
          <div class="flex items-center justify-between">
            <div>
              <div class="font-medium"><%= cq.text %></div>
              <div class="text-xs text-gray-500">Order: <%= cq.orderIndex %></div>
            </div>
            <form method="post" action="/configs/company-questions/<%= cq.id %>/delete?configId=<%= config.id %>">
              <button class="text-red-600">Delete</button>
            </form>
          </div>
          <details class="space-y-2">
            <summary class="cursor-pointer text-sm text-gray-700">Prompt</summary>
            <pre class="whitespace-pre-wrap text-sm bg-gray-50 p-3 rounded"><%= cq.prompt %></pre>
          </details>
          <div class="mt-2">
            <h3 class="font-medium mb-2">Supporting Questions</h3>
            <% if (cq.supportingQuestions.length === 0) { %>
              <p class="text-gray-600 text-sm">None yet.</p>
            <% } %>
            <ul class="space-y-2">
              <% cq.supportingQuestions.forEach(sq => { %>
                <li class="flex items-center justify-between border rounded px-3 py-2">
                  <div>
                    <div class="text-sm"><%= sq.text %></div>
                    <div class="text-xs text-gray-500">Responder: <%= sq.responderType %> â€¢ Order: <%= sq.orderIndex %></div>
                  </div>
                  <form method="post" action="/configs/supporting-questions/<%= sq.id %>/delete?configId=<%= config.id %>">
                    <button class="text-red-600 text-sm">Delete</button>
                  </form>
                </li>
              <% }) %>
            </ul>
          </div>
          <form method="post" action="/configs/company-questions/<%= cq.id %>/supporting-questions?configId=<%= config.id %>" class="grid gap-3 md:grid-cols-3 mt-3">
            <div class="md:col-span-2">
              <label class="block text-sm font-medium mb-1">Supporting Question</label>
              <input name="text" class="w-full border px-3 py-2 rounded" placeholder="Name something this person does well when working with others." />
            </div>
            <div>
              <label class="block text-sm font-medium mb-1">Responder</label>
              <select name="responderType" class="w-full border px-3 py-2 rounded">
                <option value="MANAGER">MANAGER</option>
                <option value="SELF">SELF</option>
              </select>
            </div>
            <div>
              <label class="block text-sm font-medium mb-1">Order</label>
              <input name="orderIndex" type="number" value="0" class="w-full border px-3 py-2 rounded" />
            </div>
            <div class="md:col-span-3">
              <button class="px-3 py-2 bg-gray-800 text-white rounded">Add Supporting Question</button>
            </div>
          </form>
        </div>
      <% }) %>
    </div>
  </section>
</div>


