{
  "name": "express-ejs-tailwind-ts-template",
  "description": "Starter template: Express + EJS + Tailwind + TypeScript, ready for Render.",
  "main": "dist/server.js",
  "license": "ISC",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node server.ts",
    "build:css": "tailwindcss -i ./public/css/input.css -o ./public/css/output.css --minify",
    "postinstall": "npm run build && npm run build:css"
  },
  "dependencies": {
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "express-ejs-layouts": "^2.5.1"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/express-ejs-layouts": "^2.5.3",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "autoprefixer": "^10.4.20",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.13",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
